<!-- layout_add_topic.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Add an EditText for entering the topic name -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="36dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etTopicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter topic name"
                android:layout_margin="10dp"
                android:padding="16dp" />

            <EditText
                android:id="@+id/etQuestionNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the no of questions"
                android:layout_margin="10dp"
                android:padding="16dp" />
            <Button
                android:id="@+id/btnSaveTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="Save" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Add a button to save the topic -->
</LinearLayout>
